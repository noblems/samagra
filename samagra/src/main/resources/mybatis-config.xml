<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC '-//mybatis.org//DTD Config 3.0//EN'
  'http://mybatis.org/dtd/mybatis-3-config.dtd'>
<configuration>
 <properties resource='jdbc.properties'/>
 <typeAliases>
  <typeAlias type='entity.PersonDAO' alias='Person'></typeAlias>
  <typeAlias type='entity.StudentDAO' alias='Student'></typeAlias>
  <typeAlias type='entity.AddressDAO' alias='Address'></typeAlias>
  <typeAlias type='entity.StaffDAO' alias='Staff'></typeAlias>
  <typeAlias type='entity.SubjectsDAO' alias='Subjects'></typeAlias>
  <typeAlias type='entity.MarksDAO' alias='Marks'></typeAlias>
  <typeAlias type='entity.DivisionDAO' alias='Division'></typeAlias>
 </typeAliases>
 <environments default='development'>
  <environment id='development'>
    <transactionManager type='JDBC'/>
    <dataSource type='POOLED'>    
   <property name='driver' value='${jdbc.driverClassName}'/>
   <property name='url' value='${jdbc.url}'/>
   <property name='username' value='${jdbc.username}'/>
   <property name='password' value='${jdbc.password}'/>
    </dataSource>
  </environment>
  </environments>
  <mappers>
 <mapper resource='PersonMapper.xml'/>
 <mapper resource='StudentMapper.xml'/>
 <mapper resource='AddressMapper.xml'/>
 <mapper resource='StaffMapper.xml'/>
 <mapper resource='SubjectsMapper.xml'/>
 <mapper resource='MarksMapper.xml'/>
 <mapper resource='DivisionMapper.xml'/>
  </mappers>
</configuration>